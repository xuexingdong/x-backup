<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuexingdong.x.ucenter.mapper.UserMapper">
    <select id="login" resultType="com.xuexingdong.x.ucenter.model.User">
        SELECT
            id,
            username,
            password
        FROM user
        WHERE username = #{username} AND `password` = #{password}
    </select>

    <select id="getByUsername" resultType="com.xuexingdong.x.ucenter.model.User">
        SELECT
            id,
            username,
            password
        FROM user
        WHERE username = #{username}
    </select>
</mapper>